{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		// Some compiling checks.
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,

		// dep resolution
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true
	}
}
